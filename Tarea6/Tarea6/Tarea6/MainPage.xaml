<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea6.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Bienvenidos a nuestra Calculadora!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Numero 1:"> </Label>
        <Entry Keyboard="Numeric"></Entry>
        <Label Text="Numero 2:"></Label>
        <Entry Keyboard="Numeric"></Entry>

        <Button Text="Sumar"></Button>
        <Button Text="Restar"></Button>
        <Button Text="Multiplicar"></Button>
        <Button Text="Dividir"></Button>

    </StackLayout>

</ContentPage>
